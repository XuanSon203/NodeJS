extends ../layout/default.pug

block main
  .container 
    .row
      .col-12
        h1 Kết quả tìm kiếm 

    .row
      each product in products
        .col-md-4.mb-4
          .card.shadow-sm.h-100
            img.card-img-top(src=product.thumbnail, alt=product.title, style="height: 200px; object-fit: cover;")
            .card-body.d-flex.flex-column
              h5.card-title= product.title
              p.card-text Giá: #{product.price} VNĐ
              a.btn.btn-primary.mt-auto(href=`/products/${product.slug}`) Xem Chi Tiết
