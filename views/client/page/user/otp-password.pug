doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Xác thực OTP
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  include ../mixins/alert.pug
  body
    +alert-success(5000)
    +alert-error(5000)
    .container.mt-5
      .row.justify-content-center
        .col-md-5
          h2.text-center.mb-4.text-info Nhập mã OTP

          if message
            .alert.alert-success.text-center #{message}

          if error
            .alert.alert-danger.text-center #{error}

          // Form xác thực OTP
          form(method="POST", action="/user/forgot-password/otp")
            input(type="hidden", name="email", value=email)

            .mb-3
              label(for="otp") Nhập mã OTP
              input.form-control(type="text", name="otp", required)

            button.btn.btn-primary.w-100(type="submit") Xác nhận

          // Form gửi lại mã OTP
          .text-center.mt-3
            form(method="POST", action="/resend-otp")
              input(type="hidden", name="email", value=email)
              button.btn.btn-link(type="submit") Gửi lại mã OTP

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
