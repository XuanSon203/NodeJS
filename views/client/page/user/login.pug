doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Đăng nhập
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  include ../mixins/alert.pug
  body
    +alert-success(5000)
    +alert-error(5000)
    .container.mt-5
      .row.justify-content-center
        .col-md-5
          h2.text-center.mb-4.text-primary Đăng nhập

          if error
            .alert.alert-danger.text-center #{error}

          form(method="POST", action="/user/login")
            .mb-3
              label.form-label(for="email") Email
              input.form-control(type="email", name="email", id="email", required)

            .mb-3
              label.form-label(for="password") Mật khẩu
              input.form-control(type="password", name="password", id="password", required)

            button.btn.btn-primary.w-100(type="submit") Đăng nhập

          .text-center.mt-3
            span Bạn chưa có tài khoản?
            a(href="/user/register") Đăng ký ngay

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
