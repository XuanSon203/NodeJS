doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Đăng ký tài khoản
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  include ../mixins/alert.pug
  body
    +alert-success(5000)
    +alert-error(5000)
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          h2.text-center.mb-4.text-primary Đăng ký tài khoản

          if error
            .alert.alert-danger.text-center #{error}

          form(method="POST", action="/user/register")
            .mb-3
              label.form-label(for="fullName") Họ và tên
              input.form-control(type="text", name="fullName", id="fullName", )

            .mb-3
              label.form-label(for="email") Email
              input.form-control(type="email", name="email", id="email", )

            .mb-3
              label.form-label(for="password") Mật khẩu
              input.form-control(type="password", name="password", id="password",)

           

            button.btn.btn-primary.w-100(type="submit") Đăng ký

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
