doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Quên mật khẩu
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  include ../mixins/alert.pug
  body
    +alert-success(5000)
    +alert-error(5000)
    .container.mt-5
      .row.justify-content-center
        .col-md-5
          h2.text-center.mb-4.text-warning Đổi  mật khẩu

          if message
            .alert.alert-success.text-center #{message}

          if error
            .alert.alert-danger.text-center #{error}

          form(method="POST", action="/user/password/reset")
            .mb-3
              label.form-label(for="password") Nhập mật khẩu  mới 
              input.form-control(type="password", name="password", id="password", required)
            .mb-3
              label.form-label(for="confirmPassword") Xác  nhận mật khẩu 
              input.form-control(type="confirmPassword", name="confirmPassword", id="email", required)

            button.btn.btn-warning.w-100(type="submit") Đổi mật khẩu 
         

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
