mixin alert-success(time)
  if (messages.success)
    .message.info
      div.alert.alert-primary(id="show-alert", data-time=time) 
        | #{messages.success}
        span#close-alert X
mixin alert-error(time)
  if (messages.error)
    .message.info
      div.alert.alert-danger(id="show-alert", data-time=time) 
        | #{messages.error}
        span#close-alert X
