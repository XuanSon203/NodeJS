mixin sort()
  div(sort)
          label() Trạng Thái
          select.form-select(name="sort", sort-select)
            option(value="" disabled selected) --- Chọn bộ lọc ---
            option(value="position-desc") Vị trí giảm dần
            option(value="position-asc") Vị trí tăng dần
            option(value="price-asc") Giá giảm dần
            option(value="price-desc") Giá tăng dần
            option(value="title-asc") Tiều đề A-Z
            option(value="title-desc") Tiêu đề Z-A
          .col-md-3
          button.btn.btn-danger.m-2(type="submit" sort-clear) Clear