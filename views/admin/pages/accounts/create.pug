extends ../../layout/default.pug
include ../../mixins/alert.pug

block content
  +alert-error("5000")
  h2.text-center.mb-4 Thêm mới vai trò
  form(action=`${prefixAdmin}/accounts/create` method="POST" class="container p-4 border rounded shadow-sm")
    .mb-3
      label.form-label(for="fullName") Họ tên :
      input.form-control(type="text" name="fullName" required placeholder="Nhập tên vai trò")

    .mb-3
      label.form-label(for="email") Email:
      input.form-control(name="email" rows="3")
    .mb-3
      label.form-label(for="password") Mật khẩu :
      input.form-control(name="password" rows="3")
    .mb-3
      label.form-label(for="phone") Số điện thoại :
      input.form-control(name="phone" rows="3")
    .mb-3
      label.form-label(for="avatar") Avatar :
      input.form-control(name="avatar" type="file" rows="3")
    .mb-3
      
      label.form-label(for="role_id") Phân Quyền :
      select.form-control(name="role_id")
        option(value="" disabled selected) -- Chọn -- 
        each item in roles

           option(value=item.id) #{item.title}
    .mb-3
      label(for="active")
        input#active(type="radio", name="status", value="active", checked)
        | Active
      label(for="inactive")
        input#inactive(type="radio", name="status", value="inactive")
        | InActive


    .d-flex.justify-content-end
      button.btn.btn-success(type="submit") Thêm vai trò
