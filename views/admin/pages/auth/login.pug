doctype html
html
  head
    title Login
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    style.
      body {
        background-color: #f7f7f7;
      }
      .login-box {
        max-width: 400px;
        margin: 100px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
      }

include ../../mixins/alert.pug

body 
  .container
    .login-box
      h2.text-center.mb-4 Đăng nhập

      +alert-error("5000")
      +alert-success("5000")

      form(action=`${prefixAdmin}/auth/login` method="POST")
        .mb-3
          label.form-label(for="email") Email
          input.form-control(type="email", name="email", id="email", placeholder="Nhập email")

        .mb-3
          label.form-label(for="password") Mật khẩu
          input.form-control(type="password", name="password", id="password", placeholder="Nhập mật khẩu")

        button.btn.btn-primary.w-100(type="submit") Đăng nhập
